{
  "follow_button": {
    "description": "Follow button on Instagram profile pages",
    "evidence_path": "evidence/instagram/20250115/profile/",
    "strategies": [
      {
        "type": "accessibility_id",
        "value": "Follow",
        "confidence": 0.95,
        "notes": "Primary strategy - reliable accessibility ID for follow button"
      },
      {
        "type": "accessibility_id", 
        "value": "follow-user-button",
        "confidence": 0.9,
        "notes": "Alternative accessibility ID for follow button"
      },
      {
        "type": "ios_predicate",
        "value": "name == \"Follow\" AND type == \"XCUIElementTypeButton\"",
        "confidence": 0.85,
        "notes": "iOS predicate for follow button"
      },
      {
        "type": "ios_class_chain",
        "value": "**/XCUIElementTypeButton[`name == \"Follow\"`]",
        "confidence": 0.8,
        "notes": "Class chain selector for follow button"
      }
    ],
    "fallback_strategies": [
      {
        "type": "xpath",
        "value": "//XCUIElementTypeButton[contains(@name, 'Follow') and not(contains(@name, 'Following'))]",
        "confidence": 0.75,
        "notes": "XPath for follow button excluding following button"
      },
      {
        "type": "xpath",
        "value": "//XCUIElementTypeButton[@name='Follow']",
        "confidence": 0.7,
        "notes": "Simple XPath for follow button"
      }
    ],
    "verify_signals": [
      {
        "type": "element_enabled",
        "expected": true
      },
      {
        "type": "element_visible",
        "expected": true
      },
      {
        "type": "element_type",
        "expected": "XCUIElementTypeButton"
      },
      {
        "type": "text_content",
        "expected": "Follow"
      }
    ],
    "recovery_actions": ["ensure_profile_loaded", "scroll_to_profile_header"],
    "timeout_ms": 8000
  },
  
